<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@color/blue"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Activity.CandidateProfileActivity"
            android:padding="20dp"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/candidatePhotoImageViewCP"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_profile_photo" />

            <TextView
                android:id="@+id/fullNameTextViewCP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="@font/sf_pro_display_bold"
                android:text="fullNameTextViewCP"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/button_secondary_background"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="Summary" />

                <TextView
                    android:id="@+id/summaryTextViewCP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="Summary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/phoneNoImageViewCP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_phone"
                    android:padding="15dp"
                    android:background="@drawable/button_secondary_background"/>
                <ImageView
                    android:id="@+id/emailImageViewCP"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_email"
                    android:padding="15dp"
                    android:background="@drawable/button_secondary_background"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>




        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="Application Status"
            android:textColor="@color/darkgray"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/TVApplicationStatusCP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text=""
            android:textColor="@color/darkgray"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTNReject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_white_background"
            android:elevation="0dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:padding="18dp"
            android:stateListAnimator="@null"
            android:text="Reject"
            android:textAllCaps="false"
            android:textColor="#CD2B49"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTNNextStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:elevation="0dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:padding="18dp"
            android:stateListAnimator="@null"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>






    </LinearLayout>

</LinearLayout>
